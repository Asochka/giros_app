<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/textView_name_signup"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:hint="Name"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/textView_login_lastname_signup"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Lastname"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_signup" />

        <EditText
            android:id="@+id/textView_email_signup"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Email"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_lastname_signup" />

        <EditText
            android:id="@+id/textView_login_phone_signup"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Phone number"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_email_signup" />

        <EditText
            android:id="@+id/editTextPasswordSignup_1"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_phone_signup" />

        <EditText
            android:id="@+id/editTextPasswordSignup_2"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Type password again"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPasswordSignup_1" />

        <Button
            android:id="@+id/button_signUp"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:text="Sign Up"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_rememberMe" />

        <CheckBox
            android:id="@+id/checkBox_terms"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:text="Accept all terms"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPasswordSignup_2" />

        <CheckBox
            android:id="@+id/checkBox_rememberMe"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:text="Remember me"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_terms" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_signUp">


            <TextView
                android:id="@+id/textView_registredYet_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginEnd="10dp"
                android:text="Registred yet?"
                android:textSize="8dp" />

            <Button
                android:id="@+id/button_registredYet_signup"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:text="Log In"
                android:textSize="7dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>